<h1>Your assets:</h1>
<br/>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="row">
	<div class="column">
		<table class="table">
		<tbody>
		<tr>
			<td>
				Type
			</td>
			<td>
				Description
			</td>
			<td>
				Amount
			</td>
			<td colspan=2></td>
		</tr>
		<% @assets.each do |asset| %>
		<tr>
		  <%= render asset %>
		</tr>
		<% end %>
		</tbody>
		</table>

		<%= link_to "Add new asset", new_asset_path, :class => 'button-xs' %><br />
	</div>		
</div>