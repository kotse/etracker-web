<h1>Asset#create</h1>
<p>Find me in app/views/asset/create.html.erb</p>

<%= form_for(@asset) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :asset_type, placeholder: "Asset type..." %>
  </div>

  <div class="field">
    <%= f.text_area :amount, placeholder: "123.45" %>
  </div>

  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>