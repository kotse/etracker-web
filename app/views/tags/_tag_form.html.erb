<div class='tag-form'>
<%= form_for(@tag) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Vacation", class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :color %>
    
    <%= f.select :color, color_options, {}, {class: "select-color"} %>
  </div>
  
  <%= f.submit submit_text, class: "btn btn-large btn-primary" %>
<% end %>
</div>